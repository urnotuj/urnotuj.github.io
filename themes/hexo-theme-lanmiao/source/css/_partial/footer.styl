footer
  font-size: 20px
  padding: 50px 0 65px

footer .list-inline
  margin: 0
  padding: 0

footer .copyright
  font-size: 14px
  text-align: center
  margin-bottom: 0

footer .copyright a
  color: #337ab7

footer .copyright a:hover,
footer .copyright a:focus
  color: #0085a1


.page-fullscreen footer
  position: absolute
  width: 100%
  bottom: 0
  padding-bottom: 20px
  opacity: 0.6
  color: #fff

.page-fullscreen footer .copyright
  color: #fff

.page-fullscreen footer .copyright a
  color: #fff

.page-fullscreen footer .copyright a:hover
  color: #ddd
