            <div class="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% for (var i in theme.menu){ %>
                    <li><a href="<%- theme.menu[i] %>"><%= i %></a></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <!-- /.navbar-collapse -->
    </div>
