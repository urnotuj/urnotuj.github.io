
<section class="posts">
  <% page.posts.each(function (post) { %>
    <article class="post">
      <div class="post-title">
        <a class="post-title-link" href="<%- url_for(post.path) %>"><%= post.title %></a>
      </div>
      <div class="post-meta">
        <span class="post-time"><i class="fa fa-clock-o"></i> 发表于<%- date(post.date, "YYYY-MM-DD") %></span>
      </div>
      <div class="post-content">
        <%- post.excerpt %>
      </div>
      <a class="more" href="<%- url_for(post.path) %>">阅读全文>> </a>
    </article>
  <% }) %>
</section>
<%- partial('_partial/paginator') %>