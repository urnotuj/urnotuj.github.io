.post {
    margin: 1em auto;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 0 2px #ddd;
    padding: 30px 50px;
}

.posts {
    .post:first-child {
        margin-top: 0;
    }
    .post-title .post-title-link {
        text-decoration: none;
        font-size: 1.5em;
        color: #204264;
        position: relative;
        &:hover {
            color: #204264;
        }
        &:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: #204264;
            visibility: hidden;
            transform: scaleX(0);
            -webkit-transform: scaleX(0);
            -webkit-transition: all 0.3s ease-in-out 0s;
            transition: all 0.3s ease-in-out 0s;
        }
    }
    .post-title .post-title-link:hover:before {
        visibility: visible;
        -webkit-transform: scaleX(1);
        transform: scaleX(1);
    }
    .post-content {
        a {
            color: #368CCB;
            text-decoration: none;
        }
    }

    .post-meta {
        color: #BABABA;
        font-size: 1rem;
    }
    .more {
        color: #204264;
        font-style: oblique;
        font-size: 1rem;
    }
}