    .first-container-outer {
         background: url("../images/default.png") 0 / cover fixed;
         width:100%;
         height: 100%;
         
        .first-container-inner {
            position: absolute;
            left: 0;
            background: hsla(0, 0%, 100%, .25) border-box;
            border-radius: .3em;
            box-shadow: 0 0 0 1px hsla(0, 0%, 100%, .3) inset, 0 0.5em 1em rgba(0, 0, 0, 0.6);
            right: 0;
            top: 0;
            bottom: 0;
            margin: auto;
            width: 666px;
            height: 200px;
            h3,
            p {
                color: #ffffff;
            }
        }
        .first-container-inner::before {
            background: url("../images/default.png") 0 / cover fixed;
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: -30px;
            z-index: -1;
            -webkit-filter: blur(20px);
            filter: blur(20px);
        }
    }

