*
    -webkit-box-sizing:content-box;
    -moz-box-sizing:content-box;
    box-sizing:content-box;
html{
	/* height: 100%; */
    width:100%;
}
body {
    width: 100%;
    height: 100%;
	margin:0;
	padding:0;
	position: relative;
    min-height: 100%;
    line-height: 2;
    background-color: #F2F2F2;
    font-size: 1.1rem;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
}

div.gotoTop {
    display: none;
    cursor: pointer;
    position: fixed;
    right:1.9%;
    bottom: 88px;
}
div.gotoTop:hover{
    background:#C7DEF5;
}
div.active{
background: #d7d7d7;
}

.container {
    padding-top: 88px;
    max-width: 960px;
    margin: 0 auto;
    color: #555;
    padding-bottom: 60px;
    font-size: 1rem;
    .main {
        /*.all-post*/
        .all-post {

            /* margin: 1em auto; */
            background-color: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 0 2px #ddd;
            padding: 30px 50px;

            .post-title {
                color: #204264;
                font-size: 1.5rem;
                text-align: center;
                
                    line-height: 2.8rem;
                
            }

            .post-meta {
                /*时间*/
                color: #BABABA;
                font-size: 1rem;
                text-align: center;
            }
            .post-content {
                /*内容*/
                p {
                    img {
                        max-width: 100%;
                        overflow: hidden;
                    }
                }
            }
            ul.article-tag-list {
                padding: 0;
                li.article-tag-list-item {
                    list-style: none;
                    background: #f5f5f5;
                    margin: 0 10px;
                    min-width: 50px;
                    padding: 1px 5px;
                    height: 20px;
                    a.article-tag-list-link {
                        text-decoration: none;
                        color: #555;
                        min-width: 30px;
                        display: inline-block;
                        text-align: center;
                    }
                }
            }
        }
    }
}

